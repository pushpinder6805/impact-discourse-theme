{{#if this.isCustomHomepage}}
<section class="course-overview2">
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>RISE Investment Calculator</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f7f7f7;
    }

    .calculator-container {
      max-width: 1200px;
      margin: 50px auto;
      padding: 20px;
      background: #fff;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    h1 {
      text-align: center;
      font-size: 28px;
      margin-bottom: 20px;
    }

    .form-section {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: space-between;
    }

    .form-group {
      flex: 1 1 calc(50% - 20px);
    }

    .form-group label {
      display: block;
      margin-bottom: 5px;
      font-size: 14px;
    }

    .form-group input,
    .form-group select {
      width: 100%;
      padding: 10px;
      font-size: 14px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    .calculate-btn {
      display: block;
      margin: 20px auto;
      padding: 10px 20px;
      background-color: #b09d5e;
      color: #fff;
      border: none;
      border-radius: 4px;
      font-size: 16px;
      cursor: pointer;
    }

    .calculate-btn:hover {
      background-color: #a08f5d;
    }

    .result-section {
      text-align: center;
      margin-top: 20px;
    }

    .result-value {
      font-size: 24px;
      color: #333;
    }

    .chart-container {
      max-width: 800px;
      margin: 30px auto;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    table th,
    table td {
      border: 1px solid #ccc;
      padding: 10px;
      text-align: center;
    }

    table th {
      background-color: #f4f4f4;
    }

    .email-section {
      margin-top: 30px;
      text-align: center;
    }

    .email-section input {
      width: 300px;
      margin: 5px;
      padding: 10px;
      font-size: 14px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    .email-section button {
      padding: 10px 20px;
      background-color: #b09d5e;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    .email-section button:hover {
      background-color: #a08f5d;
    }
  </style>
</head>
<body>
  <div class="calculator-container">
    <h1>RISE Investment Calculator</h1>

    <!-- Input Section -->
    <div class="form-section">
      <div class="form-group">
        <label for="starting-amount">Starting Amount</label>
        <input type="number" id="starting-amount" placeholder="$5000">
      </div>
      <div class="form-group">
        <label for="additional-contribution">Additional Contribution</label>
        <input type="number" id="additional-contribution" placeholder="$100">
      </div>
      <div class="form-group">
        <label for="frequency">Contribution Frequency</label>
        <select id="frequency">
          <option value="annually">Annually</option>
          <option value="monthly">Monthly</option>
        </select>
      </div>
      <div class="form-group">
        <label for="rate-of-return">Expected Rate of Return (%)</label>
        <input type="number" id="rate-of-return" placeholder="8">
      </div>
      <div class="form-group">
        <label for="years">Years to Grow</label>
        <input type="number" id="years" placeholder="30">
      </div>
    </div>

    <button class="calculate-btn" onclick="calculateInvestment()">Calculate</button>

    <!-- Result Section -->
    <div class="result-section">
      <p class="result-value" id="result-value">This investment will be worth $0.</p>
    </div>

    <!-- Chart Section -->
    <div class="chart-container">
      <canvas id="investmentChart"></canvas>
    </div>

    <!-- Table Section -->
    <table>
      <thead>
        <tr>
          <th>Year</th>
          <th>Starting Amount</th>
          <th>Annual Contribution</th>
          <th>Total Contribution</th>
          <th>Interest Earned</th>
          <th>End Balance</th>
        </tr>
      </thead>
      <tbody id="result-table-body"></tbody>
    </table>

    <!-- Email Section -->
    <div class="email-section">
      <p>SEND RESULTS TO YOUR INBOX</p>
      <input type="text" placeholder="Name">
      <input type="email" placeholder="Email">
      <button>Send Results</button>
    </div>
  </div>

  <script>
    function calculateInvestment() {
      const startingAmount = parseFloat(document.getElementById('starting-amount').value) || 0;
      const additionalContribution = parseFloat(document.getElementById('additional-contribution').value) || 0;
      const frequency = document.getElementById('frequency').value === 'monthly' ? 12 : 1;
      const rateOfReturn = parseFloat(document.getElementById('rate-of-return').value) / 100 || 0;
      const years = parseInt(document.getElementById('years').value) || 0;

      let balance = startingAmount;
      let totalContribution = startingAmount;
      let tableHTML = '';
      const yearlyData = [];
      
      for (let year = 1; year <= years; year++) {
        const interest = balance * rateOfReturn;
        balance += interest + additionalContribution * frequency;
        totalContribution += additionalContribution * frequency;

        tableHTML += `
          <tr>
            <td>${2024 + year}</td>
            <td>$${balance.toFixed(2)}</td>
            <td>$${(additionalContribution * frequency).toFixed(2)}</td>
            <td>$${totalContribution.toFixed(2)}</td>
            <td>$${interest.toFixed(2)}</td>
            <td>$${balance.toFixed(2)}</td>
          </tr>
        `;
        yearlyData.push(balance);
      }

      document.getElementById('result-table-body').innerHTML = tableHTML;
      document.getElementById('result-value').textContent = `This investment will be worth $${balance.toFixed(2)}.`;

      const ctx = document.getElementById('investmentChart').getContext('2d');
      new Chart(ctx, {
        type: 'bar',
        data: {
          labels: Array.from({ length: years }, (_, i) => 2024 + i + 1),
          datasets: [{
            label: 'End Balance',
            data: yearlyData,
            backgroundColor: 'rgba(181, 161, 111, 0.8)',
          }]
        },
        options: {
          responsive: true,
          scales: {
            y: {
              beginAtZero: true
            }
          }
        }
      });
    }
  </script>
</body>
</html>


  </section>
{{/if}}
