{{#if this.isCustomHomepage}}
<section class="course-overview2">
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Investment Calculator</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f7f7f7;
    }

    .calculator-container {
      max-width: 800px;
      margin: 50px auto;
      padding: 20px;
      background: #fff;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .calculator-title {
      text-align: center;
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 20px;
    }

    .calculator-form {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    .form-group {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .form-group label {
      flex: 1;
      font-size: 16px;
    }

    .form-group input,
    .form-group select {
      flex: 2;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    .form-group input[type="number"] {
      max-width: 150px;
    }

    .result {
      text-align: center;
      font-size: 18px;
      margin-top: 20px;
      color: #333;
    }

    .calculate-btn {
      display: block;
      margin: 20px auto;
      padding: 10px 20px;
      background-color: #b09d5e;
      color: #fff;
      border: none;
      border-radius: 4px;
      font-size: 16px;
      cursor: pointer;
    }

    .calculate-btn:hover {
      background-color: #a08f5d;
    }
  </style>
</head>
<body>
  <div class="calculator-container">
    <div class="calculator-title">Investment Calculator</div>
    <form class="calculator-form">
      <div class="form-group">
        <label for="investment">Investment Amount ($):</label>
        <input type="number" id="investment" placeholder="Enter amount" required />
      </div>
      <div class="form-group">
        <label for="rate">Interest Rate (%):</label>
        <input type="number" id="rate" placeholder="Enter rate" required />
      </div>
      <div class="form-group">
        <label for="years">Investment Period (Years):</label>
        <input type="number" id="years" placeholder="Enter years" required />
      </div>
      <div class="form-group">
        <label for="compound">Compounding Frequency:</label>
        <select id="compound">
          <option value="1">Annually</option>
          <option value="4">Quarterly</option>
          <option value="12">Monthly</option>
        </select>
      </div>
      <button type="button" class="calculate-btn" onclick="calculateInvestment()">Calculate</button>
    </form>
    <div class="result" id="result">Your investment returns will appear here.</div>
  </div>

  <script>
    function calculateInvestment() {
      const investment = parseFloat(document.getElementById('investment').value);
      const rate = parseFloat(document.getElementById('rate').value) / 100;
      const years = parseInt(document.getElementById('years').value);
      const compound = parseInt(document.getElementById('compound').value);

      if (!investment || !rate || !years || !compound) {
        document.getElementById('result').textContent = 'Please fill all fields correctly.';
        return;
      }

      // Compound interest formula
      const total = investment * Math.pow(1 + rate / compound, compound * years);

      document.getElementById('result').textContent = `Your total returns after ${years} years: $${total.toFixed(2)}`;
    }
  </script>
</body>
</html>

  </section>
{{/if}}
