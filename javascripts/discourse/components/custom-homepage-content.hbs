{{#if this.isCustomHomepage}}
  <section class="course-overview snipcss-K3msL">
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Start Here</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f7f7f7;
      margin: 0;
      padding: 20px;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
      background-color: white;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    h1 {
      text-align: center;
      font-size: 2.5em;
      color: #5a5a5a;
    }

    .section {
      margin: 20px 0;
    }

    .section-header {
      font-size: 1.25em;
      font-weight: bold;
      color: #4a4a4a;
      margin-bottom: 10px;
    }

    .card {
      background-color: #f0f0f0;
      border-radius: 10px;
      padding: 15px;
      margin: 10px 0;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      box-shadow: 0 0 5px rgba(0,0,0,0.1);
    }

    .card-title {
      font-size: 1.2em;
      font-weight: bold;
      color: #333;
    }

    .card-description {
      font-size: 1em;
      color: #555;
    }

    .intro-button {
      padding: 10px 20px;
      background-color: #ffc107;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      color: #333;
      font-weight: bold;
      margin-top: 10px;
    }

    .intro-button:hover {
      background-color: #e0a800;
    }

    .card-info {
      margin-top: 10px;
      font-size: 0.9em;
      color: #777;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Start Here</h1>

    <!-- Section 1: Introduction -->
    <div class="section0">
      <div class="section0-header">1. Let them know you are in! Introduce yourself to the community.</div>
      <div class="card">
        <div class="card-content">
          <div class="card-title">Loading...</div> <!-- This will be replaced with the topic title -->
          <div class="card-description">Loading...</div> <!-- This will be replaced with the post content -->
          <button class="intro-button">Introduce yourself now</button>
        </div>
        <div class="card-info">
          <div>Loading replies...</div> <!-- This will be replaced with the reply count -->
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const topicId = 46; // The topic ID you want to fetch
      const apiUrl = `/t/${topicId}.json`; // The API endpoint for the topic
      
      // Fetch the topic data from the Discourse API
      fetch(apiUrl)
        .then(response => response.json())
        .then(data => {
          // Insert the title and excerpt into the card content
          const cardTitle = document.querySelector('.card-title');
          const cardDescription = document.querySelector('.card-description');
          const cardReplies = document.querySelector('.card-info div');
          
          cardTitle.innerHTML = data.title; // Set the topic title
          cardDescription.innerHTML = data.post_stream.posts[0].cooked; // Insert the first post content (HTML)
          cardReplies.innerHTML = `${data.posts_count} replies`; // Set the reply count
        })
        .catch(error => console.error('Error fetching the topic data:', error));
    });
  </script>
</body>
</html>

  </section>
{{/if}}
