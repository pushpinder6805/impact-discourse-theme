    <script>
        const categoryFilter = document.getElementById('categoryFilter');
        const subcategoryFilter = document.getElementById('subcategoryFilter');
        const investmentFilter = document.getElementById('investmentFilter');
        const searchIcon = document.getElementById('searchIcon');
        const cardsContainer = document.getElementById('cardsContainer');
        const cards = document.querySelectorAll('.card796');

        function filterCards() {
            const category = categoryFilter.value;
            const subcategory = subcategoryFilter.value;
            const investment = investmentFilter.value;

            cards.forEach(card => {
                const cardCategory = card.getAttribute('data-category');
                const cardSubcategory = card.getAttribute('data-subcategory');
                const cardInvestment = card.getAttribute('data-investment');

                const matchesCategory = (category === 'all' || cardCategory === category);
                const matchesSubcategory = (subcategory === 'all' || cardSubcategory === subcategory);
                const matchesInvestment = (investment === 'all' || cardInvestment === investment);

                if (matchesCategory && matchesSubcategory && matchesInvestment) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        }

        searchIcon.addEventListener('click', filterCards);

        categoryFilter.addEventListener('change', filterCards);
        subcategoryFilter.addEventListener('change', filterCards);
        investmentFilter.addEventListener('change', filterCards);
