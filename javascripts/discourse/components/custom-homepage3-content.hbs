{{#if this.isCustomHomepage}}
<section class="course-overview1">
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Investment Opportunities with Filters</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f7f7f7;
            margin: 0;
            padding: 0;
        }

        .container796 {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
            font-size: 36px;
            margin-bottom: 40px;
            font-family: 'Georgia', serif;
            color: #3b3b3b;
        }

        .filters796 {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            margin-bottom: 30px;
            align-items: center;
        }

        select {
            padding: 12px;
            font-size: 15px;
            border: 1px solid #ccc;
            border-radius: 25px;
            background-color: #f7f7f7;
            padding-left: 20px;
            padding-right: 20px;
            cursor: pointer;
        }

        select:focus {
            outline: none;
            border-color: #999;
        }

        .cards796 {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
        }

        .card796 {
            background-color: white;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
            border: 1px solid #ddd;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .card796:hover {
            transform: translateY(-10px);
        }

        .card796 img {
            width: 100%;
            height: 240px;
            margin-bottom: 15px;
        }

        .card796 h2 {
            font-size: 18px;
            margin-bottom: 10px;
            color: #333;
        }

        .card796 p {
            font-size: 14px;
            color: #555;
            line-height: 1.6;
        }

        .card-footer796 {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 12px;
            color: #999;
        }

        .card-footer796 i {
            margin-right: 5px;
        }

        .likes, .comments {
            display: flex;
            align-items: center;
        }
    </style>
</head>
<body>
<div class="container796">
    <h1>Investment Opportunities</h1>
    <div class="filters796">
        <select id="categoryFilter">
            <option value="all">Investment Type</option>
            <option value="Growth Potential">Growth Potential</option>
            <option value="Tax Benefits">Tax Benefits</option>
            <option value="Passive Income">Passive Income</option>
        </select>
    </div>
    <section class="cards796" id="cardsContainer">
        <!-- Cards will be dynamically rendered here -->
    </section>
</div>
<script>
    const cardData = [
        { title: 'Energea - Renewable Energy', investmentTypes: ['Growth Potential', 'Tax Benefits', 'Passive Income'], imageUrl: 'https://impactinvestingcommunity.com/uploads/default/optimized/1X/11112796108db01e791fb6d17caf83623e99ffa9_2_867x750.jpeg', description: 'Promoting sustainability and combating climate change', views: 7, comments: 0 },
        { title: 'Sunwealth - Big Path Capital', investmentTypes: ['Growth Potential', 'Tax Benefits', 'Passive Income'], imageUrl: 'https://impactinvestingcommunity.com/uploads/default/original/1X/b19c1dbe55508bd90f863f4078dc1200527d81c2.jpeg', description: 'VC funding for high-impact ventures', views: 13, comments: 31 },
        { title: 'Iroquois Valley - Organic Farmland', investmentTypes: ['Growth Potential', 'Tax Benefits', 'Passive Income'], imageUrl: 'https://impactinvestingcommunity.com/uploads/default/optimized/1X/3cc332fba56fd97ced80193346adfaa1cc13a613_2_867x750.jpeg', description: 'An organic farmland finance company.', views: 12, comments: 3 },
        { title: 'Water Equity - Clean Water', investmentTypes: ['Growth Potential', 'Tax Benefits', 'Passive Income'], imageUrl: 'https://impactinvestingcommunity.com/uploads/default/optimized/1X/6ae6b49924d7f62284b4aff0b61dc30a4ab2db0f_2_867x750.jpeg', description: 'Investing in clean water solutions.', views: 12, comments: 3 },
        { title: 'Hypatia Women CEO ETF', investmentTypes: ['Growth Potential', 'Tax Benefits', 'Passive Income'], imageUrl: 'https://impactinvestingcommunity.com/uploads/default/optimized/1X/8e594662fe7eff025a0a48a1fe6790dbadd8f100_2_867x750.jpeg', description: 'Focused on gender equality in leadership.', views: 12, comments: 3 },
        { title: 'The Lyme Timber Company', investmentTypes: ['Growth Potential'], imageUrl: 'https://impactinvestingcommunity.com/uploads/default/original/1X/e63d43143115be6c67b1942e67735565308512b5.png', description: 'Investing in sustainable timber.', views: 12, comments: 3 }
    ];

    const cardsContainer = document.getElementById('cardsContainer');

    function renderCards(cards) {
        cardsContainer.innerHTML = '';
        cards.forEach(card => {
            const cardElement = document.createElement('div');
            cardElement.classList.add('card796');
            cardElement.innerHTML = `
                <img src="${card.imageUrl}" alt="${card.title} Logo">
                <h2>${card.title}</h2>
                <p>${card.description}</p>
                <div class="card-footer796">
                    <div class="likes">
                        <i>üëÅÔ∏è</i>${card.views}
                    </div>
                    <div class="comments">
                        <i>üí¨</i>${card.comments}
                    </div>
                </div>
            `;
            cardsContainer.appendChild(cardElement);
        });
    }

    function filterCards() {
        const categoryValue = document.getElementById('categoryFilter').value;
        const filteredCards = cardData.filter(card => categoryValue === 'all' || card.investmentTypes.includes(categoryValue));
        renderCards(filteredCards);
    }

    document.getElementById('categoryFilter').addEventListener('change', filterCards);

    // Initial render
    renderCards(cardData);
</script>
</body>
</html>

</section>
{{/if}}