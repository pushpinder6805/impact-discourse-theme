{{#if this.isCustomHomepage}}
<section class="course-overview1">
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Investment Opportunities with Filters</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f7f7f7;
            margin: 0;
            padding: 0;
        }

        .container796 {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
            font-size: 36px;
            margin-bottom: 40px;
            font-family: 'Georgia', serif;
            color: #3b3b3b;
        }

        .filters796 {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            margin-bottom: 30px;
            align-items: center;
        }

        select {
            padding: 12px;
            font-size: 15px;
            border: 1px solid #ccc;
            border-radius: 25px;
            background-color: #f7f7f7;
            padding-left: 20px;
            padding-right: 20px;
            cursor: pointer;
        }

        select:focus {
            outline: none;
            border-color: #999;
        }

        .cards796 {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
        }

        .card796 {
            background-color: white;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
            border: 1px solid #ddd;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .card796:hover {
            transform: translateY(-10px);
        }

        .card796 img {
            width: 100%;
            height: 240px;
            margin-bottom: 15px;
        }

        .card796 h2 {
            font-size: 18px;
            margin-bottom: 10px;
            color: #333;
        }

        .card796 p {
            font-size: 14px;
            color: #555;
            line-height: 1.6;
        }

        .card-footer796 {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 12px;
            color: #999;
        }

        .card-footer796 i {
            margin-right: 5px;
        }

        .likes, .comments {
            display: flex;
            align-items: center;
        }
    </style>
</head>
<body>
<div class="container796">
    <h1>Investment Opportunities</h1>
    <div class="filters796">
        <select id="categoryFilter">
            <option value="all">Investment Type</option>
            <option value="Growth Potential">Growth Potential</option>
            <option value="Tax Benefits">Tax Benefits</option>
            <option value="Passive Income">Passive Income</option>
        </select>
        <select id="impactAreaFilter">
            <option value="all">Select Impact Area</option>
            <option value="Clean Energy">Clean Energy</option>
            <option value="HealthTech">HealthTech</option>
            <option value="Affordable Housing">Affordable Housing</option>
        </select>
        <select id="investmentSizeFilter">
            <option value="all">Select Investment Size</option>
            <option value="25000">Less than $25,000</option>
            <option value="50000">$25,000 - $50,000</option>
            <option value="100000">More than $50,000</option>
        </select>
    </div>
    <section class="cards796" id="cardsContainer">
        <!-- Cards will be dynamically rendered here -->
    </section>
</div>
<script>
    const cardData = [
        { title: 'Epic Cleantec', impactArea: 'Clean Energy', investmentType: 'Growth Potential', investmentSize: 25000 },
        { title: 'Energea - Renewable Energy', impactArea: 'Clean Energy', investmentType: 'Passive Income', investmentSize: 100000 },
        { title: '7Wire Ventures - Healthcare VC', impactArea: 'HealthTech', investmentType: 'Growth Potential', investmentSize: 50000 },
        { title: 'Mishra Capital', impactArea: 'Affordable Housing', investmentType: 'Growth Potential', investmentSize: 100000 }
    ];

    const cardsContainer = document.getElementById('cardsContainer');

    function renderCards(cards) {
        cardsContainer.innerHTML = '';
        cards.forEach(card => {
            const cardElement = document.createElement('div');
            cardElement.classList.add('card796');
            cardElement.innerHTML = `
                <h2>${card.title}</h2>
                <p>Impact Area: ${card.impactArea}</p>
                <p>Investment Type: ${card.investmentType}</p>
                <p>Investment Size: $${card.investmentSize}</p>
            `;
            cardsContainer.appendChild(cardElement);
        });
    }

    function filterCards() {
        const categoryValue = document.getElementById('categoryFilter').value;
        const impactAreaValue = document.getElementById('impactAreaFilter').value;
        const investmentSizeValue = document.getElementById('investmentSizeFilter').value;

        const filteredCards = cardData.filter(card => {
            const categoryMatch = categoryValue === 'all' || card.investmentType.includes(categoryValue);
            const impactAreaMatch = impactAreaValue === 'all' || card.impactArea === impactAreaValue;
            const investmentSizeMatch = investmentSizeValue === 'all' || card.investmentSize <= parseInt(investmentSizeValue);

            return categoryMatch && impactAreaMatch && investmentSizeMatch;
        });

        renderCards(filteredCards);
    }

    document.getElementById('categoryFilter').addEventListener('change', filterCards);
    document.getElementById('impactAreaFilter').addEventListener('change', filterCards);
    document.getElementById('investmentSizeFilter').addEventListener('change', filterCards);

    // Initial render
    renderCards(cardData);
</script>
</body>
</html>
</section>
{{/if}}
