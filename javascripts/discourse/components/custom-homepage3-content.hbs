{{#if this.isCustomHomepage}}
<section class="course-overview1">
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Investment Opportunities</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            background-color: #f5f5f5;
            color: #333;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        header {
            text-align: center;
            margin-bottom: 40px;
        }

        h1 {
            font-size: 36px;
            margin-bottom: 20px;
        }

        .filters {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-bottom: 30px;
        }

        select {
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }

        .card {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: left;
            transition: transform 0.2s;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .card:hover {
            transform: translateY(-10px);
        }

        .card img {
            width: 150px;
            height: 150px;
            object-fit: contain;
            margin-bottom: 15px;
        }

        .card h2 {
            font-size: 20px;
            margin-bottom: 10px;
        }

        .card p {
            margin-bottom: 10px;
            font-size: 14px;
            color: #555;
        }

        .card-content {
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .strong-text {
            font-weight: bold;
            margin-top: auto;
        }

        .card-description {
            margin-top: 10px;
        }
    </style>
</head>
<body>

    <div class="container">
        <header>
            <h1>Investment Opportunities</h1>
            <div class="filters">
                <select name="category" id="category">
                    <option value="">Choose Private or Public</option>
                </select>
                <select name="subcategory" id="subcategory">
                    <option value="">Select Here</option>
                </select>
                <select name="size" id="size">
                    <option value="">Select Here</option>
                </select>
            </div>
        </header>

        <section class="cards">
            <div class="card">
                <img src="https://via.placeholder.com/150" alt="Epic Cleantec Logo">
                <div class="card-content">
                    <h2>Epic Cleantec</h2>
                    <p>Water Reuse Technology</p>
                    <p class="card-description">Impact Investment: Water Reuse Technology</p>
                    <p class="strong-text">Private</p>
                </div>
            </div>

            <div class="card">
                <img src="https://via.placeholder.com/150" alt="Energea Logo">
                <div class="card-content">
                    <h2>Energea</h2>
                    <p>Renewable Energy</p>
                    <p class="card-description">Affordable and Clean Energy</p>
                    <p class="strong-text">Private</p>
                </div>
            </div>

            <div class="card">
                <img src="https://via.placeholder.com/150" alt="7Wire Ventures Logo">
                <div class="card-content">
                    <h2>7Wire Ventures</h2>
                    <p>Healthcare VC</p>
                    <p class="card-description">Good Health and Well-Being</p>
                    <p class="strong-text">Private</p>
                </div>
            </div>

            <div class="card">
                <img src="https://via.placeholder.com/150" alt="BlocPower Logo">
                <div class="card-content">
                    <h2>BlocPower</h2>
                    <p>Clean Energy</p>
                    <p class="card-description">Affordable and Clean Energy</p>
                    <p class="strong-text">Private</p>
                </div>
            </div>

            <div class="card">
                <img src="https://via.placeholder.com/150" alt="Mishra Capital Logo">
                <div class="card-content">
                    <h2>Mishra Capital</h2>
                    <p>Investment Firm</p>
                    <p class="card-description">Responsible Investment</p>
                    <p class="strong-text">Private</p>
                </div>
            </div>

            <div class="card">
                <img src="https://via.placeholder.com/150" alt="ScopeFour Capital Logo">
                <div class="card-content">
                    <h2>ScopeFour Capital</h2>
                    <p>Investment Firm</p>
                    <p class="card-description">Responsible Investment</p>
                    <p class="strong-text">Private</p>
                </div>
            </div>
        </section>
    </div>

</body>
</html>

