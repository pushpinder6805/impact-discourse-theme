    function filterCards() {
        const categoryValue = document.getElementById('categoryFilter').value;
        const impactAreaValue = document.getElementById('impactAreaFilter').value;
        const investmentSizeValue = document.getElementById('investmentSizeFilter').value;

        const filteredCards = cardData.filter(card => {
            const categoryMatch = categoryValue === 'all' || card.investmentType.includes(categoryValue);
